<!-- Greeting -->
<h1 style="margin: 0 0 20px 0; font-size: 24px; font-weight: 600; color: #333333;">
  <%= t('devise.mailer.reset_password_instructions.title') %>
</h1>

<p style="margin: 0 0 20px 0; font-size: 16px; line-height: 26px; color: #51545e;">
  <%= t('devise.mailer.reset_password_instructions.greeting', name: @resource.full_name || @resource.email) %>
</p>

<p style="margin: 0 0 25px 0; font-size: 16px; line-height: 26px; color: #51545e;">
  <%= t('devise.mailer.reset_password_instructions.instruction') %>
</p>

<!-- Action Button -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin-bottom: 25px;">
  <tr>
    <td align="center">
      <table border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td align="center" style="border-radius: 8px; background-color: #5C6BC0;">
            <%= link_to edit_password_url(@resource, reset_password_token: @token),
                style: "display: inline-block; padding: 16px 36px; font-size: 16px; font-weight: 600; color: #ffffff; text-decoration: none; border-radius: 8px;" do %>
              <%= t('devise.mailer.reset_password_instructions.action') %>
            <% end %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<!-- Alternative Link -->
<p style="margin: 0 0 15px 0; font-size: 14px; line-height: 22px; color: #9a9ea6;">
  <%= t('devise.mailer.reset_password_instructions.alternative_link') %>
</p>
<p style="margin: 0 0 20px 0; font-size: 14px; line-height: 22px; color: #5C6BC0; word-break: break-all;">
  <%= edit_password_url(@resource, reset_password_token: @token) %>
</p>

<!-- Warning Box -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 25px 0;">
  <tr>
    <td style="background-color: #fff8e6; border-left: 4px solid #f5a623; padding: 15px; border-radius: 4px;">
      <p style="margin: 0; font-size: 14px; line-height: 22px; color: #856404;">
        <%= t('devise.mailer.reset_password_instructions.warning') %>
      </p>
    </td>
  </tr>
</table>

<!-- Divider -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 25px 0;">
  <tr>
    <td style="border-top: 1px solid #e8e8eb;"></td>
  </tr>
</table>

<p style="margin: 0; font-size: 14px; line-height: 22px; color: #9a9ea6;">
  <%= t('devise.mailer.reset_password_instructions.ignore') %>
</p>
