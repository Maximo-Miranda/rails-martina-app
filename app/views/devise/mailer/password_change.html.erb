<!-- Greeting -->
<h1 style="margin: 0 0 20px 0; font-size: 24px; font-weight: 600; color: #333333;">
  <%= t('devise.mailer.password_change.title') %>
</h1>

<p style="margin: 0 0 20px 0; font-size: 16px; line-height: 26px; color: #51545e;">
  <%= t('devise.mailer.password_change.greeting', name: @resource.full_name || @resource.email) %>
</p>

<p style="margin: 0 0 25px 0; font-size: 16px; line-height: 26px; color: #51545e;">
  <%= t('devise.mailer.password_change.message') %>
</p>

<!-- Success Box -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin-bottom: 25px;">
  <tr>
    <td style="background-color: #e8f9e8; border-left: 4px solid #28a745; padding: 15px; border-radius: 4px;">
      <p style="margin: 0; font-size: 14px; line-height: 22px; color: #155724;">
        <%= t('devise.mailer.password_change.changed_at', time: I18n.l(Time.current, format: :long)) %>
      </p>
    </td>
  </tr>
</table>

<!-- Warning Box -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 25px 0;">
  <tr>
    <td style="background-color: #fff8e6; border-left: 4px solid #f5a623; padding: 15px; border-radius: 4px;">
      <p style="margin: 0; font-size: 14px; line-height: 22px; color: #856404;">
        <%= t('devise.mailer.password_change.warning') %>
      </p>
    </td>
  </tr>
</table>

<!-- Divider -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 25px 0;">
  <tr>
    <td style="border-top: 1px solid #e8e8eb;"></td>
  </tr>
</table>

<p style="margin: 0; font-size: 14px; line-height: 22px; color: #9a9ea6;">
  <%= t('devise.mailer.password_change.footer') %>
</p>
