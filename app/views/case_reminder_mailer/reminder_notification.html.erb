<!-- Icon -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin-bottom: 24px;">
  <tr>
    <td align="center">
      <table border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td style="width: 72px; height: 72px; background-color: #e3f2fd; border-radius: 50%; text-align: center; vertical-align: middle;">
            <span style="font-size: 32px;">‚è∞</span>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
<!-- Title -->
<h1 style="margin: 0 0 12px 0; font-family: Google Sans, Roboto, Arial, sans-serif; font-size: 24px; font-weight: 400; color: #202124; text-align: center; line-height: 32px;">
  Recordatorio: <%= @time_until %>
</h1>
<!-- Greeting -->
<p style="margin: 0 0 24px 0; font-family: Roboto, Arial, sans-serif; font-size: 14px; line-height: 20px; color: #5f6368; text-align: center;">
  Hola <%= @recipient.full_name || @recipient.email %>, tienes un evento programado.
</p>
<!-- Reminder Details Card -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin-bottom: 16px;">
  <tr>
    <td style="background-color: #f8f9fa; padding: 20px; border-radius: 8px; border-left: 4px solid #1a73e8;">
      <p style="margin: 0 0 12px 0; font-family: Google Sans, Roboto, Arial, sans-serif; font-size: 18px; font-weight: 500; color: #202124;">
        <%= @case_reminder.title %>
      </p>
      <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td style="padding: 4px 0;">
            <span style="font-family: Roboto, Arial, sans-serif; font-size: 13px; color: #5f6368;">Tipo:</span>
            <span style="font-family: Roboto, Arial, sans-serif; font-size: 13px; color: #202124; margin-left: 8px;"><%= @case_reminder.display_type %></span>
          </td>
        </tr>
        <tr>
          <td style="padding: 4px 0;">
            <span style="font-family: Roboto, Arial, sans-serif; font-size: 13px; color: #5f6368;">Fecha y hora:</span>
            <span style="font-family: Roboto, Arial, sans-serif; font-size: 13px; color: #202124; margin-left: 8px;"><%= l(@case_reminder.reminder_at, format: :long) %></span>
          </td>
        </tr>
        <% if @case_reminder.location.present? %>
          <tr>
            <td style="padding: 4px 0;">
              <span style="font-family: Roboto, Arial, sans-serif; font-size: 13px; color: #5f6368;">Lugar:</span>
              <span style="font-family: Roboto, Arial, sans-serif; font-size: 13px; color: #202124; margin-left: 8px;"><%= @case_reminder.location %></span>
            </td>
          </tr>
        <% end %>
        <% if @case_reminder.description.present? %>
          <tr>
            <td style="padding: 8px 0 0 0;">
              <p style="margin: 0; font-family: Roboto, Arial, sans-serif; font-size: 13px; color: #5f6368;">Descripcion:</p>
              <p style="margin: 4px 0 0 0; font-family: Roboto, Arial, sans-serif; font-size: 13px; color: #202124;"><%= @case_reminder.description %></p>
            </td>
          </tr>
        <% end %>
      </table>
    </td>
  </tr>
</table>
<!-- Legal Case Details Card -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin-bottom: 16px;">
  <tr>
    <td style="background-color: #f8f9fa; padding: 16px; border-radius: 8px;">
      <p style="margin: 0 0 8px 0; font-family: Roboto, Arial, sans-serif; font-size: 12px; font-weight: 500; color: #5f6368; text-transform: uppercase; letter-spacing: 0.5px;">
        Informacion del Expediente
      </p>
      <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td style="padding: 4px 0;">
            <span style="font-family: Roboto, Arial, sans-serif; font-size: 13px; color: #5f6368;">Expediente:</span>
            <span style="font-family: Roboto, Arial, sans-serif; font-size: 13px; color: #202124; font-weight: 500; margin-left: 8px;"><%= @legal_case.case_number %></span>
          </td>
        </tr>
        <tr>
          <td style="padding: 4px 0;">
            <span style="font-family: Roboto, Arial, sans-serif; font-size: 13px; color: #5f6368;">Partes:</span>
            <span style="font-family: Roboto, Arial, sans-serif; font-size: 13px; color: #202124; margin-left: 8px;"><%= @legal_case.plaintiff %> vs <%= @legal_case.defendant %></span>
          </td>
        </tr>
        <tr>
          <td style="padding: 4px 0;">
            <span style="font-family: Roboto, Arial, sans-serif; font-size: 13px; color: #5f6368;">Juzgado:</span>
            <span style="font-family: Roboto, Arial, sans-serif; font-size: 13px; color: #202124; margin-left: 8px;"><%= @legal_case.court %></span>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
<% if @assigned_users.any? %>
<!-- Assigned Users Card -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin-bottom: 24px;">
  <tr>
    <td style="background-color: #f8f9fa; padding: 16px; border-radius: 8px;">
      <p style="margin: 0 0 8px 0; font-family: Roboto, Arial, sans-serif; font-size: 12px; font-weight: 500; color: #5f6368; text-transform: uppercase; letter-spacing: 0.5px;">
        Tambien notificados
      </p>
      <p style="margin: 0; font-family: Roboto, Arial, sans-serif; font-size: 13px; color: #202124;">
        <%= @assigned_users.map { |u| u.full_name || u.email }.join(", ") %>
      </p>
    </td>
  </tr>
</table>
<% end %>
<!-- Action Button -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin-bottom: 24px;">
  <tr>
    <td align="center">
      <table border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td style="border-radius: 4px; background-color: #1a73e8;">
            <%= link_to legal_case_case_reminder_url(@legal_case, @case_reminder),
                style: "display: inline-block; padding: 12px 32px; font-family: Google Sans, Roboto, Arial, sans-serif; font-size: 14px; font-weight: 500; color: #ffffff; text-decoration: none;" do %>
              Ver y Confirmar Recordatorio
            <% end %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
<!-- Confirmation Info -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin-bottom: 24px;">
  <tr>
    <td style="background-color: #e8f5e9; padding: 12px 16px; border-radius: 8px;">
      <p style="margin: 0; font-family: Roboto, Arial, sans-serif; font-size: 12px; line-height: 18px; color: #2e7d32;">
        <span style="font-weight: 500;">Nota:</span> Al confirmar este recordatorio, se desactivaran las notificaciones pendientes para todos los usuarios asignados.
      </p>
    </td>
  </tr>
</table>
<!-- Footer notice -->
<p style="margin: 0; font-family: Roboto, Arial, sans-serif; font-size: 12px; line-height: 18px; color: #5f6368; text-align: center;">
  Este es un recordatorio automatico generado por Martina.
</p>
